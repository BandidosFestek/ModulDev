@inherits DotNetNuke.Web.Mvc.Framework.DnnWebViewPage<dynamic>
<h2>Átlag szín eredmény</h2>

@if (ViewBag.AverageColor != null)
{
    <div class="alert alert-info">
        <strong>Átlag szín (hex):</strong> @ViewBag.AverageColor
        <div style="width: 100px; height: 100px; background-color: @ViewBag.AverageColor; border: 1px solid #000;"></div>
    </div>
}

<a href="@Url.Action("Index", "ImageAnalyzer")" class="btn btn-secondary mt-3">Vissza a feltöltéshez</a>
