@inherits DotNetNuke.Web.Mvc.Framework.DnnWebViewPage<dynamic>
@using DotNetNuke.Web.Mvc.Helpers

@{
    Layout = "~/DesktopModules/MVC/Dnn.Szinajanlo8/Views/Shared/_Layout.cshtml";
}

<h2>Kép feltöltése – Átlag szín megjelenítés</h2>

@if (ViewBag.ColorCount != null)
{
    <div class="alert alert-warning mt-3">
        <strong>Színek száma az adatbázisban:</strong> @ViewBag.ColorCount
    </div>
}

<form action="@Url.Action("Index", "ImageAnalyzer")" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="wallColor">Fal színe:</label>
        <!-- Színválasztó Picker -->
        <input type="color" name="wallColor" id="wallColor" class="form-control mb-2" value="#ff0000" required />
    </div>

    <div class="form-group">
        <label for="imageFile">Kép feltöltése:</label>
        <input type="file" name="imageFile" class="form-control mb-2" required />
    </div>

    <button type="submit" class="btn btn-success">Feltöltés</button>
</form>

@if (ViewBag.AverageColor != null)
{
    <div class="alert alert-info mt-3">
        <strong>Átlag szín:</strong> @ViewBag.AverageColor <br />
        <strong>Hex kód:</strong> @ViewBag.BaseColorHex
        <div style="width:100px; height:100px; background-color:@ViewBag.BaseColorHex; margin-top: 10px; border: 1px solid #000;"></div>
    </div>
}